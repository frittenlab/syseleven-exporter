{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":docker",
    ":prHourlyLimitNone",
    ":rebaseStalePrs",
    ":label(renovate)",
    "docker:enableMajor"
  ],
  "includeForks": true,
  "packageRules": [
    {
      "matchPackageNames": [
        "renovate/renovate"
      ],
      "enabled": true,
      "description": "Automatically merge minor, patch and digest updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "platformAutomerge": true,
      "ignoreTests": true,
      "labels": [
        "renovate",
        "automerged"
      ]
    }
  ]
}
